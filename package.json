{
  "name": "vscode-view-charset",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "icon": "images/icon.png",
  "version": "0.1.6",
  "license": "MIT",
  "publisher": "long-kudo",
  "repository": {
    "type": "git",
    "url": "https://github.com/long-910/vscode-view-charset"
  },
  "bugs": {
    "url": "https://github.com/long-910/vscode-view-charset/issues"
  },
  "engines": {
    "vscode": "^1.96.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "viewcharset",
          "name": "%extension.displayName%",
          "icon": "images/viewcharset-icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "viewcharset.openWebView",
        "title": "%command.openWebView%",
        "category": "View Charset"
      },
      {
        "command": "viewcharset.openFile",
        "title": "%command.openFile%"
      },
      {
        "command": "viewcharset.copyCharset",
        "title": "%command.copyCharset%",
        "category": "View Charset",
        "icon": "$(clippy)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "viewcharset.copyCharset",
          "when": "view == viewcharset && viewItem == charsetFile",
          "group": "inline"
        }
      ]
    },
    "localizations": [
      {
        "languageId": "zh-cn",
        "languageName": "Chinese (Simplified)",
        "localizedLanguageName": "中文(简体)",
        "translations": [
          {
            "id": "long-kudo.vscode-view-charset",
            "path": "./i18n/package.nls.zh-cn.json"
          }
        ]
      },
      {
        "languageId": "ja",
        "languageName": "日本語",
        "localizedLanguageName": "日本語",
        "translations": [
          {
            "id": "long-kudo.vscode-view-charset",
            "path": "./i18n/package.nls.ja.json"
          }
        ]
      },
      {
        "languageId": "zh-tw",
        "languageName": "Chinese (Traditional)",
        "localizedLanguageName": "中文(繁體)",
        "translations": [
          {
            "id": "long-kudo.vscode-view-charset",
            "path": "./i18n/package.nls.zh-tw.json"
          }
        ]
      },
      {
        "languageId": "ko",
        "languageName": "Korean",
        "localizedLanguageName": "한국어",
        "translations": [
          {
            "id": "long-kudo.vscode-view-charset",
            "path": "./i18n/package.nls.ko.json"
          }
        ]
      }
    ],
    "configuration": {
      "title": "View Charset",
      "properties": {
        "viewCharset.fileExtensions": {
          "type": "array",
          "default": [
            ".txt",
            ".csv",
            ".json",
            ".xml",
            ".html",
            ".css",
            ".js",
            ".ts",
            ".md",
            ".c",
            ".h",
            ".cpp",
            ".hpp",
            ".cc",
            ".hh",
            ".py",
            ".pyw",
            ".pyi",
            ".java",
            ".kt",
            ".kts",
            ".go",
            ".rs",
            ".rb",
            ".php",
            ".swift",
            ".m",
            ".mm",
            ".cs",
            ".vb",
            ".fs",
            ".fsx",
            ".fsi",
            ".fsproj",
            ".vbproj",
            ".csproj",
            ".sln",
            ".sh",
            ".bash",
            ".zsh",
            ".fish",
            ".ps1",
            ".bat",
            ".cmd",
            ".ini",
            ".cfg",
            ".conf",
            ".properties",
            ".env",
            ".gitignore",
            ".gitattributes",
            ".editorconfig",
            ".dockerfile",
            ".dockerignore",
            ".makefile",
            ".mk"
          ],
          "description": "%config.fileExtensions.description%"
        },
        "viewCharset.maxFileSize": {
          "type": "number",
          "default": 1024,
          "description": "%config.maxFileSize.description%"
        },
        "viewCharset.cacheEnabled": {
          "type": "boolean",
          "default": true,
          "description": "%config.cacheEnabled.description%"
        },
        "viewCharset.cacheDuration": {
          "type": "number",
          "default": 3600,
          "description": "%config.cacheDuration.description%"
        },
        "viewCharset.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/.git/**"
          ],
          "description": "%config.excludePatterns.description%"
        },
        "viewCharset.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "%config.debugMode.description%"
        },
        "viewCharset.logToFile": {
          "type": "boolean",
          "default": false,
          "description": "%config.logToFile.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./ && npm run nls",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && webpack --mode development && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js",
    "nls": "npx vscode-nls-dev compile --verbose -i ./i18n/package.nls.default.json -o ./package.nls.json ./i18n/package.nls.ja.json ./i18n/package.nls.zh-cn.json ./i18n/package.nls.zh-tw.json ./i18n/package.nls.ko.json",
    "package": "webpack --mode production && npm run nls",
    "watch:webpack": "webpack --mode development --watch"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/encoding-japanese": "^2.2.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "22.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-electron": "^2.4.1",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^9.0.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.0.0",
    "vscode-nls-dev": "^4.0.4",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "encoding-japanese": "^1.0.30",
    "vscode-nls": "^5.2.0"
  }
}
